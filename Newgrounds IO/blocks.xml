<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<palette>
	<block tag="NG_init" spec="Init with App ID: %0 Encryption Key: %1 %2" code="StencylNG.init(~,~,~);" help="Do this at the start of the game and use the RC4 encryption key." type="action" color="yellow" returns="void">
		<fields>
			<text order="0"></text>
			<text order="1"></text>
			<dropdown order="2">
				<choices>
					<c text="Debug" code="true"></c>
					<c text="Release" code="false"></c>
				</choices>
			</dropdown>
		</fields>
	</block>
	
	<block tag="NG_login" spec="Log in to Newgrounds" code="StencylNG.login();" help="This block is only needed for testing outside Newgrounds." type="action" color="yellow" returns="void">
		<fields/>
	</block>
	
	<block tag="NG_unlockMedal" spec="Unlock Medal with ID %0" code="StencylNG.unlockMedal(~);" help="Use the ID number from Newgrounds, not the medal name" type="action" color="yellow" returns="void">
		<fields>
			<number order="0"></number>
		</fields>
	</block>


	<block tag="NG_medal" spec="Medal" code="medal" help="Use this block with the medal property block." type="normal" color="charcoal" returns="anything" hidden="true">
		<fields/>
	</block>

	<block tag="NG_setUnlockCallback" spec="Set Unlock Callback %1" code="StencylNG.setUnlockCallback(function(medal:io.newgrounds.objects.Medal){~});" help="This is useful for showing a popup when a medal is unlocked." type="wrapper" color="yellow" returns="void">
		<fields>
			<CODE_BLOCK order="0"></CODE_BLOCK>
			<attached-block order="1" tag="NG_medal"/>
		</fields>
	</block>

	<block tag="NG_submitScore" spec="Submit Score %1 to Scoreboard ID %0" code="StencylNG.loadScoreboardsAndSubmitScore(Std.int(~), Std.int(~));" help="Submit a score to the given scoreboard. Make sure the player is logged in." type="action" color="yellow" returns="void">
    		<fields>
        		<number order="0"></number> <!-- Scoreboard ID -->
        		<number order="1"></number> <!-- Score -->
   		</fields>
	</block>

	<block tag="NG_getUsername" spec="Get Newgrounds Username" code="StencylNG.getUsername()" help="Returns the logged-in Newgrounds username as a string. Returns null if not logged in." type="normal" color="yellow" returns="String">
   		 <fields/>
	</block>

	<block tag="NG_isLoggedIn" spec="Is player signed in to Newgrounds?" code="StencylNG.isLoggedIn()" help="Returns true if the player is currently signed in to Newgrounds." type="normal" color="yellow" returns="Boolean">
		<fields/>
	</block>


	<block tag="NG_getMedalProperty" spec="%0 of Medal %1" code="StencylNG.getMedalProperty(~,~)" help="Get various properties of a medal." type="normal" color="yellow" returns="anything">
		<fields>
			<dropdown order="0">
				<choices>
					<c text="ID" code="&quot;id&quot;"></c>
					<c text="Name" code="&quot;name&quot;"></c>
                    <c text="Description" code="&quot;description&quot;"></c>
					<c text="Image URL" code="&quot;icon&quot;"></c>
					<c text="Point Value" code="&quot;value&quot;"></c>
					<c text="Difficulty" code="&quot;difficulty&quot;"></c>
					<c text="Secret" code="&quot;secret&quot;"></c>
					<c text="Unlocked" code="&quot;unlocked&quot;"></c>
				</choices>
			</dropdown>
			<anything order="1"/>
		</fields>
	</block>
</palette>